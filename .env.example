ENV=development
DB_URL=sqlite:///./data/bets.db
BOOKIE_API_BASE_URL=https://api.example-bookie.com
BOOKIE_API_KEY=your_api_key_here
MODE=DRY_RUN
DEFAULT_KELLY_FRACTION=0.2
MAX_STAKE_FRAC=0.05
DAILY_LOSS_LIMIT=1000
MAX_OPEN_BETS=10

# TheOddsAPI (optional)
THEODDS_API_KEY=your_theodds_api_key_here
THEODDS_API_BASE=https://api.the-odds-api.com/v4

# Betfair Exchange (optional)
BETFAIR_API_BASE=https://api.betfair.com
BETFAIR_APP_KEY=your_betfair_app_key_here
BETFAIR_SESSION_TOKEN=your_betfair_session_token_here

# HTTP settings
HTTP_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
